let userName = 'Jack';

//ternary expression to respond depending on whether user enters a name
userName ? console.log(`Hello, ${userName}!`) : console.log('Hello!');

//question the user wants to ask Magic Eight Ball
userQuestion = 'Is Hank cute?'
console.log(`${userName} asks: ${userQuestion}`)

//generate random number for reply with Math.floor to round down to whole number
let randomNumber = Math.floor(Math.random()*8);

//initiate eightBall variable to hold response
let eightBall = '';

// generating replies using switch statement
switch(randomNumber) {
  case 0:
   eightBall = 'It is certain';
    break;
  case 1:
   eightBall = 'It is decidedly so';
    break;
  case 2:
    eightBall = 'Reply hazy try again';
    break;
  case 3:
   eightBall = 'Cannot predict now';
    break;
  case 4:
   eightBall = 'Do not count on it';
    break;
  case 5:
    eightBall = 'My sources say no';
    break;
  case 6:
    eightBall = 'Outlook not so good';
    break;
  case 7:
    eightBall = 'Signs point to yes';
    break;
  default:
    eightball = 'Ask another question';
    break;
} 

